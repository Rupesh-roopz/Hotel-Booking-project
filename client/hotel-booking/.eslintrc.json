{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "rules": {
        "require-jsdoc": ["error", {
            "require": {
                "FunctionDeclaration": false,
                "MethodDefinition": false,
                "ClassDeclaration": false,
                "ArrowFunctionExpression": false,
                "FunctionExpression": false
            }
        }],
        "indent": ["error", 4],
        "react/prop-types" : 0,
        "react/react-in-jsx-scope": "off",
        "linebreak-style": 0,
        "new-cap" : "off",
        "key-spacing": ["error", {
            "beforeColon": true,
            "afterColon": true
        }]
            
    }
}
